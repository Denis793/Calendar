{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Additional checks */
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "exactOptionalPropertyTypes": false,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* No types for production build */
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "server", "**/*.test.ts", "**/*.test.tsx", "src/setupTests.ts", "vite.config.ts", "vitest.config.ts"]
}
