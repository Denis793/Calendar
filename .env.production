# Production environment configuration for Render.com

# Frontend Configuration - ВАЖЛИВО: відносні шляхи для same origin
VITE_API_URL=/api
VITE_NODE_ENV=production
VITE_SYNC_ENABLED=true

# Server Configuration  
NODE_ENV=production
PORT=10000

# MongoDB Configuration (буде надано Render)
# MONGODB_URI буде встановлено автоматично

# JWT Configuration (буде згенеровано Render)
# JWT_SECRET буде згенеровано автоматично
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
